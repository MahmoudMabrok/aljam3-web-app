<!DOCTYPE html>

<html
  dir="<%= params.dig(:lookbook, :display, :direction) || "rtl" %>"
  style="background-color: <%= params.dig(:lookbook, :display, :bg_color) || "white" %>"
>
  <head>
    <title>Component Preview</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="<%= params.dig(:lookbook, :display, :theme) || "light" %>" style="padding: 20px">
    <div style="
      margin-left: auto;
      margin-right: auto;
      max-width: <%= params.dig(:lookbook, :display, :max_width) || "100%" %>
    ">
      <%= yield %>
    </div>
  </body>
</html>
